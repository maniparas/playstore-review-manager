# Google Play API Configuration
# Path to your Google Cloud service account JSON file
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/your/service-account.json

# Your Android app's package name (e.g., com.example.myapp)
DEFAULT_PACKAGE_NAME=com.example.app

# Default language for review translations (e.g., en, es, fr)
DEFAULT_TRANSLATION_LANGUAGE=en

# Enable mock mode for testing without real credentials (true/false)
ENABLE_MOCK_MODE=true

# Default number of reviews to fetch per request (1-500)
DEFAULT_PAGE_SIZE=50

# Cache TTL in seconds
CACHE_TTL_SECONDS=300

# Optional: AI provider for generating insights (openai, or leave empty)
AI_PROVIDER=

# Optional: OpenAI API key (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=

# Google Play API scopes (usually no need to change)
GOOGLE_PLAY_SCOPES=https://www.googleapis.com/auth/androidpublisher
